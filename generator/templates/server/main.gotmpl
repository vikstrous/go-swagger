package main

import (
  "log"
  "os"
  "net/http"

  "github.com/vikstrous/go-swagger/spec"

  {{range .DefaultImports}}{{printf "%q" .}}
  {{end}}
  {{range $key, $value := .Imports}}{{$key}} {{ printf "%q" $value}}
  {{end}}
)

// This file was generated by the swagger tool.
