//go:generate swagger generate server -t ../.. -A {{ pascalize .Name }}{{if .Principal}} --principal {{.Principal}}{{end}}

var swaggerJSON = json.RawMessage({{.SwaggerJSON}})

func main() {
  swaggerSpec, err := spec.New(swaggerJSON, "")
  if err != nil {
    log.Fatalln(err)
  }

  port := os.Getenv("PORT")
  if port == "" {
    port = "0"
  }

  host := os.Getenv("HOST")
  if host == "" {
    host = "localhost"
  }

  api := {{.Package}}.New{{ pascalize .Name }}API(swaggerSpec)
  configureAPI(api)

  listener, err := net.Listen("tcp", host + ":" + port)
	if err != nil {
		log.Fatalln(err)
	}

	fmt.Printf("serving {{ humanize .Name }} at http://%s\n", listener.Addr())

  if err := http.Serve(listener, api.Serve()); err != nil {
    log.Fatalln(err)
  }
}
